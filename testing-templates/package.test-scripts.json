{
  "name": "ai-learning-platform-test-templates",
  "version": "1.0.0",
  "description": "Testing templates and configurations for AI Learning Platform",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --config=jest.integration.config.js --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:a11y": "playwright test --config=playwright.a11y.config.ts",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:api": "jest --config=jest.api.config.js",
    "test:database": "jest --config=jest.database.config.js",
    "test:security": "node testing-templates/security/security-tests.js",
    "test:performance": "artillery run testing-templates/performance/load-test.yml",
    "test:performance:report": "artillery report --output artillery-report.html artillery-report.json",
    "test:smoke": "playwright test --config=playwright.smoke.config.ts",
    "test:production": "jest --config=jest.production.config.js --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:ci:e2e": "playwright test --shard=1/4",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:quality": "npm run lint && npm run type-check && npm run test:ci",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "test:db:setup": "NODE_ENV=test npm run db:migrate",
    "test:db:reset": "NODE_ENV=test npm run db:reset",
    "test:db:seed": "NODE_ENV=test npm run db:seed",
    "test:db:performance": "node scripts/test-db-performance.js",
    "coverage:upload": "codecov",
    "coverage:serve": "npm run test:coverage && http-server coverage/lcov-report -p 8080",
    "playwright:install": "npx playwright install",
    "playwright:install-deps": "npx playwright install-deps",
    "playwright:codegen": "npx playwright codegen",
    "test:watch:all": "jest --watchAll",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:report": "jest --json --outputFile=test-results.json",
    "test:merge-reports": "playwright merge-reports",
    "test:show-report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "artillery": "^2.0.0",
    "axe-core": "^4.8.0",
    "axios": "^1.6.0",
    "chai": "^4.3.0",
    "codecov": "^3.8.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-playwright": "^0.18.0",
    "eslint-plugin-testing-library": "^6.1.0",
    "http-server": "^14.1.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^1.3.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "typescript": "^5.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/testing-templates/jest.setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/*.config.{js,ts}",
      "!src/**/index.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.{js,jsx,ts,tsx}",
      "<rootDir>/tests/**/*.test.{js,jsx,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/dist/",
      "<rootDir>/e2e/"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}