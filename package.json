{
  "name": "ai-learning-game-platform",
  "version": "1.0.0",
  "description": "AI Learning Game Platform with comprehensive testing framework",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "artillery run tests/performance/load-testing.yml",
    "test:performance:report": "artillery run tests/performance/load-testing.yml --output results.json",
    "test:security": "npm audit && snyk test",
    "test:accessibility": "jest tests/unit/accessibility",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:ci": "jest --ci --coverage --watchAll=false && playwright test",
    "test:pre-commit": "lint-staged && jest --bail --findRelatedTests",
    "test:smoke": "jest tests/smoke",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "prisma": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "axios": "^1.6.0",
    "openai": "^4.0.0",
    "@google/generative-ai": "^0.1.0",
    "lucide-react": "^0.294.0",
    "framer-motion": "^10.16.0",
    "zustand": "^4.4.0",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.0",
    "zod": "^3.22.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "react-syntax-highlighter": "^15.5.0",
    "@types/react-syntax-highlighter": "^15.5.11",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "recharts": "^2.8.0",
    "date-fns": "^3.0.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "artillery": "^2.0.0",
    "axe-core": "^4.8.0",
    "jest-axe": "^8.0.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "nock": "^13.4.0",
    "msw": "^2.0.0",
    "faker": "^6.6.0",
    "@faker-js/faker": "^8.3.0",
    "snyk": "^1.1200.0",
    "eslint": "^8.55.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint-config-next": "^14.0.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.12.0",
    "percy": "^0.28.0",
    "chromatic": "^10.0.0",
    "dotenv": "^16.3.0",
    "node-mocks-http": "^1.13.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:pre-commit",
      "pre-push": "npm run test:unit"
    }
  }
}